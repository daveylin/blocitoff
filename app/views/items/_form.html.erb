   <div class="col-md-8">
     <%= form_for [@user, @item] do |f| %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_area :name, rows: 1, class: 'form-control', placeholder: "Enter item details" %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>